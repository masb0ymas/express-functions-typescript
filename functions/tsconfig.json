{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "typeRoots": ["./src/types"],
    "baseUrl": "./src",
    "paths": {
      "@bin/*": ["bin/*"],
      "@config/*": ["config/*"],
      "@constants/*": ["constants/*"],
      "@controllers/*": ["controllers/*"],
      "@helpers/*": ["helpers/*"],
      "@interfaces/*": ["interfaces/*"],
      "@middlewares/*": ["middlewares/*"],
      "@migrations/*": ["migrations/*"],
      "@models/*": ["models/*"],
      "@modules/*": ["modules/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@views/*": ["views/*"],
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "compileOnSave": true,
  "include": ["src/**/*"]
}
